<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green300"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.giovannivg.examrapigioa.DetailActivity"
    tools:showIn="@layout/activity_detail">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="10dp"
            android:text="@string/name_movie"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:layout_below="@id/movieTitle"
            android:padding="@dimen/padding_layout"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="@dimen/layout_margin_top2"
            android:padding="@dimen/padding_layout"
            android:textAlignment="center"
            android:text="@string/plot"
            android:textStyle="bold"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/plotSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plot"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:padding="@dimen/padding_layout"
            android:text="@string/plot"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plotSynopsis"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="@dimen/layout_margin_top2"
            android:padding="@dimen/padding_layout"
            android:textAlignment="center"
            android:text="@string/rating"
            android:textStyle="bold"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/userRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:padding="@dimen/padding_layout"
            android:text="@string/plot"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userRating"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="@dimen/layout_margin_top2"
            android:padding="@dimen/padding_layout"
            android:textAlignment="center"
            android:text="@string/releaser"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/release"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:padding="@dimen/padding_layout"
            android:text="@string/releaser"
            android:textSize="18sp"
            />
    </LinearLayout>
</ScrollView>

</RelativeLayout>